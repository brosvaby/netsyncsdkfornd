<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/font_white_20"
                android:centerColor="@color/font_white_20"
                android:centerY="1.0"
                android:endColor="@color/font_white_20" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="315"
                    android:startColor="#ff00bed4"
                    android:endColor="#ff0064e8"
                    android:type="linear"/>
            </shape>
        </clip>
    </item>
</layer-list>