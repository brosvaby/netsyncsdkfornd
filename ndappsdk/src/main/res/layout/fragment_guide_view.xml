<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_button_gradation_blue"
	android:orientation="vertical">

	<RelativeLayout
		android:id="@+id/container_guide_img"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="65.0dp">
		<ImageView
			android:id="@+id/img_guide"
			android:layout_width="200.0dp"
			android:layout_height="200.0dp"
			android:src="@drawable/img_onboarding_first"
			android:layout_centerInParent="true"/>
	</RelativeLayout>

	<LinearLayout
		android:id="@+id/container_guide_text"
		android:layout_below="@+id/container_guide_img"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="30.0dp">

		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="asdfasdfasdf"
			android:textSize="20.0sp"
			android:textStyle="bold"
			android:textColor="#ffffffff" />

		<TextView
			android:id="@+id/description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/title"
			android:layout_marginTop="16dp"
			android:layout_centerHorizontal="true"
			android:gravity="center"
			android:text="asdfasdfasdf"
			android:textSize="14.0sp"
			android:textColor="#ffcce7f9"
			android:lineSpacingExtra="1dp"/>

	</LinearLayout>


	<RelativeLayout
		android:id="@+id/container_next"
		android:layout_width="match_parent"
		android:layout_height="45.0dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:background="#ffffffff"
		android:layout_marginBottom="70.0dp"
		android:layout_marginLeft="30.0dp"
		android:layout_marginRight="30.0dp" >
		<TextView
			android:id="@+id/btn_next"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_centerInParent="true"
			android:text="lets..."
			android:textColor="#ff0064eb"
			android:textSize="15.0sp"
			android:textStyle="bold" />
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/margin_normal"
			android:src="@drawable/img_main_setting_arrow" />
	</RelativeLayout>

