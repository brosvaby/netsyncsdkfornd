<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_speed_on_player"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:background="@drawable/bg_speedcontrol"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:clickable="false">
    <!-- 배속 -->
    <ImageView
        android:id="@+id/btn_play_speed_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_normal"
        android:src="@drawable/btn_play_speed_up"
        android:gravity="center_horizontal"/>
    <!-- 재생 속도 표시 -->
    <TextView
        android:id="@+id/tx_play_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:text="1.0x"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:textSize="14sp" />
    <!-- 감속 -->
    <ImageView
        android:id="@+id/btn_play_speed_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_normal"
        android:src="@drawable/btn_play_speed_down"
        android:gravity="center_horizontal" />
