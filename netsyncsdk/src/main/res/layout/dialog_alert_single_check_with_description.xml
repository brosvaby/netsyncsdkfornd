<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/dialog_alert_min_width"
    android:minHeight="@dimen/dialog_alert_min_height"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_white"
    android:padding="@dimen/padding_normal">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:gravity="center"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textSize="@dimen/font_level_5"
        android:textStyle="normal"
        android:maxLines="1" />

    <RadioGroup
        android:id="@+id/radio_group_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal">
        <RadioButton
            android:id="@+id/radio_item1"
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:checked="true"
            android:button="@null"
            android:drawableRight="@drawable/btn_radio"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/font_level_3"
            android:textColor="@drawable/selector_text_color_for_dark" />
        <RadioButton
            android:id="@+id/radio_item2"
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:button="@null"
            android:drawableRight="@drawable/btn_radio"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="@dimen/font_level_3"
            android:textColor="@drawable/selector_text_color_for_dark" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_setting_arrow_normal"/>
        <TextView
            android:id="@+id/text_setting_check_description"
            android:layout_toRightOf="@+id/img_setting_check_player_footer_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_centerVertical="true"
            android:text="@string/setting_description_native_player"
            android:textStyle="normal"
            android:textSize="@dimen/font_level_1"
            android:textColor="@drawable/selector_text_color_for_dark" />
    </LinearLayout>

</LinearLayout>